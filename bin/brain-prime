#!/usr/bin/env php
<?php

use function BrainGames\PrimeGame\prime_game_run;

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';

if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

define('GAME_RULES', "Answer \"yes\" if given number is prime. Otherwise answer \"no\".\n");

prime_game_run();
