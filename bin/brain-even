#!/usr/bin/env php
<?php

use function \BrainGames\Cli\run;
use function \BrainGames\EvenGame\even_game_run;

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';

if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

echo ("Welcome to the Brain Games!\n\nAnswer \"yes\" if number even otherwise answer \"no\".\n\n");

$user_name = run();

even_game_run($user_name);